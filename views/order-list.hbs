   {{#each orderdatauser}}
   <div class="container">
      <div class="row">

         <div class="col-12">
            <div class="p-3 ">
               <div class="p-3 mb-3" style="background-color: aliceblue; border: 1px solid black;">
                  <h6>Ordered Date: {{ordereddate}}</h6>
                  <h6>Payment Method: {{paymentmethod}}</h6>
                  <h6>Delivery Address:
                     {{deliveryaddress.landmark}},{{deliveryaddress.town}}<br>{{deliveryaddress.state}},{{deliveryaddress.pincode}}
                  </h6>
                  <h6>Delivery Date: {{deliverydate}}</h6>
                  <h6>Total Price:Rs:{{grandtotal}}</h6>
                  <h6>Status: {{status}}</h6>
                  <div class="d-flex flex-row-reverse align-items-center">
                     <a href="/ordered-productdata/{{_id}}" class="btn btn-outline-info btn-sm m-1">Details</a>

                     {{#if statdelivered}}
                     {{#if returnstatus}}
                     <div class="ml-auto">
                       
                        <button onclick="location.href='/addtowallet/{{_id}}/{{grandtotal}}'"
                           class="btn btn-outline-info btn-sm btn-danger btn-hover-danger m-1">Return</button>

                     </div>

                     {{else}}

                     {{#if item}}
                     <div class="ml-auto">
                        <h6 class="text-success"><span>Successfully Returned</span></h6>
                     </div>

                     {{else}}
                     <div class="ml-auto">
                        <h6 class="text-warning">Request Processing</h6>
                     </div>
                     {{/if}}
                     {{/if}}

                     {{else}}
                     {{#if new}}
                     <h6 class="text-success"><span>Order Canceled</span></h6>
                     {{else}}
                     <div class="d-flex flex-row-reverse align-items-center">
                        <a href="/cancelorder/{{_id}}"
                           class="btn btn-outline-info btn-sm btn-danger btn-hover-danger m-1">cancel</a>

                     </div>
                     {{/if}}
                     {{/if}}
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
   {{/each}}


